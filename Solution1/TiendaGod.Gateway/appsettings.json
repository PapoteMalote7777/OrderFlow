{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "identity-api-auth": {
                "ClusterId": "identity-cluster",
                "AuthorizationPolicy": "anonymous",
                "RateLimiterPolicy": "anonymous",
                "Match": {
                    "Path": "/api/auth/{**catch-all}"
                }
            },
            "identity-api-users": {
                "ClusterId": "identity-cluster",
                "AuthorizationPolicy": "authenticated",
                "RateLimiterPolicy": "anonymous",
                "Match": {
                    "Path": "/api/user/{**catch-all}"
                }
            },
            "identity-api-usersAdmin": {
                "ClusterId": "identity-cluster",
                "AuthorizationPolicy": "admin",
                "RateLimiterPolicy": "authenticated",
                "Match": {
                    "Path": "/api/userAdmin/{**catch-all}"
                }
            },
            "identity-api-roles": {
                "ClusterId": "identity-cluster",
                "AuthorizationPolicy": "admin",
                "RateLimiterPolicy": "authenticated",
                "Match": {
                    "Path": "/api/roles/{**catch-all}"
                }
            },
            "product-public": {
                "ClusterId": "product-cluster",
                "AuthorizationPolicy": "anonymous",
                "RateLimiterPolicy": "anonymous",
                "Match": {
                    "Path": "/api/v{version}/products/{**catch-all}"
                }
            },
            "category-public": {
                "ClusterId": "product-cluster",
                "AuthorizationPolicy": "anonymous",
                "RateLimiterPolicy": "anonymous",
                "Match": {
                    "Path": "/api/v{version}/categories/{**catch-all}"
                }
            },
            "pedido-public": {
                "ClusterId": "pedido-cluster",
                "AuthorizationPolicy": "authenticated",
                "RateLimiterPolicy": "authenticated",
                "Match": {
                    "Path": "/api/pedidos/{**catch-all}"
                }
            },
            "pedido-admin": {
                "ClusterId": "pedido-cluster",
                "AuthorizationPolicy": "admin",
                "RateLimiterPolicy": "authenticated",
                "Match": {
                    "Path": "/api/pedidosAdmin/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "identity-cluster": {
                "Destinations": {
                    "identity-service": {
                        "Address": "https://TiendaGod-Identity"
                    }
                }
            },
            "product-cluster": {
                "Destinations": {
                    "product-service": {
                        "Address": "https://TiendaGod-Productos"
                    }
                }
            },
            "pedido-cluster": {
                "Destinations": {
                    "pedido-service": {
                        "Address": "https://TiendaGod-Pedidos"
                    }
                }
            }
        }
    }
}
